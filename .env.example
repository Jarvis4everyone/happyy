# Happy AI Call System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
# For local: your-ngrok-domain.ngrok.io (without https://)
# For Render: your-service-name.onrender.com (without https://)
SERVER=your-domain-here.com

# Twilio Configuration
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
FROM_NUMBER=+1234567890

# Deepgram Configuration
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=replace_with_your_deepgram_api_key
VOICE_MODEL=aura-asteria-en

# OpenAI Configuration
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-replace_with_your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# TTS Provider (optional)
TTS_PROVIDER=deepgram

# Recording (optional)
RECORDING_ENABLED=false
